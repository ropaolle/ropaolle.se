---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import cv from "../images/cv.png";
// import CV from "../components/CV.astro";
import { Linkedin, Twitter, Github } from "lucide-astro";
---

<Layout title="RopaOlle.se">
  <main class="flex h-full min-w-fit flex-col print:invisible">
    <div class="mx-auto mt-48 text-center">
      <div>
        <div class="mx-8 text-4xl text-slate-200 md:text-6xl">
          Välkommen till
        </div>
        <h1
          class="mx-2 border-slate-700 text-6xl font-bold text-sky-400 md:text-8xl"
        >
          RopaOlle.se
        </h1>
        <p class="mt-8 text-slate-300">
          First we build the tools, then they build us…
        </p>
        <div class="mt-4">
          <a href="https://github.com/ropaolle">
            <Github class="mr-2 inline h-6 w-6 text-slate-500" />
          </a>
          <a href="https://linkedin.com/ropaolle">
            <Linkedin class="mr-2 inline h-6 w-6 text-slate-500" />
          </a>
          <a href="https://x.com/ropaolle">
            <Twitter class="mr-2 inline h-6 w-6 text-slate-500" />
          </a>
        </div>
      </div>
    </div>

    <div class="mx-auto mb-2 mt-24 w-64+ text-center align-middle">
      <div class="my-4 text-3xl text-slate-200">curriculum vitae</div>
      <a href="https://cv.ropaolle.se">
        <Image src={cv} alt="cv" />
      </a>
    </div>
    <div class=" text-sm mb-12 text-slate-600 text-center">Version 0.0.2</div>

    <div
      class="absolute left-[-5rem] top-[-10rem] -z-10 w-[66%] md:left-[-15rem] md:top-[-20rem]"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
